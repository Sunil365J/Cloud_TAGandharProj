<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Inward_Truck_Security.Inward_Truck_Security">

<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:orientation="vertical"
        >


        <androidx.cardview.widget.CardView
            android:layout_width="405dp"
            android:layout_height="75dp"

            android:layout_weight="2">
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="185dp"
                android:layout_height="wrap_content"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="30dp"
                android:layout_marginTop="10dp"
                android:id="@+id/regno"

                >
                <TextView

                    android:layout_width="185dp"
                    android:layout_height="wrap_content"
                    android:text="In Time"
                    android:inputType="text"
                    android:textSize="17dp"
                    android:textStyle="bold"
                    android:layout_marginTop="12dp"/>
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="185dp"
                android:layout_height="wrap_content"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_marginLeft="200dp"
                android:layout_marginRight="30dp"
                android:layout_marginTop="10dp"

                >
                <EditText
                    android:id="@+id/etintime"
                    android:layout_width="185dp"
                    android:layout_height="wrap_content"
                    android:hint=""
                    android:inputType="text"
                    android:textSize="17dp"
                    android:textStyle="bold"
                    android:focusable="false"/>
            </com.google.android.material.textfield.TextInputLayout>
        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:orientation="horizontal"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Transport LR Copy"
                android:gravity="start"
                android:layout_gravity="start"
                android:paddingStart="18dp"
                android:paddingEnd="8dp"
                android:textStyle="bold"
                android:layout_marginLeft="20dp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Delivery Challan"
                android:gravity="end"
                android:layout_gravity="end"
                android:paddingStart="8dp"
                android:paddingEnd="8dp"
                android:layout_marginLeft="70dp"
                android:textStyle="bold"
                />

        </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="115dp"
        android:weightSum="2"
        android:orientation="horizontal">

        <androidx.cardview.widget.CardView
            android:id="@+id/imgtr"
            android:layout_width="175dp"
            android:layout_height="105dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            >

            <ImageView
                android:id="@+id/intrtrlrco"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/camera"


                />
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="175dp"
            android:layout_height="105dp"
            android:layout_marginTop="5dp"
           android:layout_marginLeft="29dp"
            >

            <ImageView
                android:id="@+id/intrdech"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/camera"/>

        </androidx.cardview.widget.CardView>


    </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:orientation="horizontal"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Tax Invoice"
                android:gravity="start"
                android:layout_gravity="start"
                android:paddingStart="18dp"
                android:paddingEnd="8dp"
                android:textStyle="bold"
                android:layout_marginLeft="30dp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="end"
                android:layout_marginLeft="120dp"
                android:gravity="end"
                android:paddingStart="8dp"
                android:paddingEnd="8dp"
                android:text="E-Way Bill"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="115dp"
            android:weightSum="2"
            android:orientation="horizontal">

            <androidx.cardview.widget.CardView
                android:layout_width="175dp"
                android:layout_height="105dp"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp">

                <ImageView
                    android:id="@+id/intrtain"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/camera"/>


            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="175dp"
                android:layout_height="105dp"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="29dp"
                >

                <ImageView
                    android:id="@+id/intrewabi"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/camera"/>

            </androidx.cardview.widget.CardView>


        </LinearLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox.ExposedDropdownMenu"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginTop="10dp"
            android:id="@+id/register">
            <AutoCompleteTextView
                android:id="@+id/etregister"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Select Register"
                android:inputType="none"
                android:textSize="17dp"
                android:textStyle="bold"/>
        </com.google.android.material.textfield.TextInputLayout>

        <androidx.cardview.widget.CardView
            android:id="@+id/wsix"
            android:layout_width="405dp"
            android:layout_height="75dp"
            android:layout_weight="2"
            >
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="185dp"
                android:layout_height="wrap_content"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="30dp"
                android:layout_marginTop="10dp"


                >
                <EditText
                     android:id="@+id/etserialnumber"
                    android:layout_width="185dp"
                    android:layout_height="wrap_content"
                    android:hint="Serial Number"
                    android:inputType="text"
                    android:textSize="17dp"
                    android:textStyle="bold"
                    android:focusable="false"
                    android:clickable="false"/>
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="185dp"
                android:layout_height="wrap_content"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_marginLeft="200dp"
                android:layout_marginRight="30dp"
                android:layout_marginTop="10dp"

                >
                <EditText
                    android:id="@+id/etvehicalnumber"
                    android:layout_width="185dp"
                    android:layout_height="wrap_content"
                    android:hint="Vehicle Number"
                    android:inputType="text"
                    android:textSize="17dp"
                    android:textStyle="bold"/>
            </com.google.android.material.textfield.TextInputLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/wseven"
            android:layout_width="405dp"
            android:layout_height="75dp"

            android:layout_weight="2"
            >
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="185dp"
                android:layout_height="wrap_content"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="30dp"
                android:layout_marginTop="10dp"


                >
                <EditText
                   android:id="@+id/etsinvocieno"
                    android:layout_width="185dp"
                    android:layout_height="wrap_content"
                    android:hint="Invoice No"
                    android:inputType="text"
                    android:textSize="17dp"
                    android:textStyle="bold"/>
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="185dp"
                android:layout_height="wrap_content"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_marginLeft="200dp"
                android:layout_marginRight="30dp"
                android:layout_marginTop="10dp"

                >
                <EditText
                  android:id="@+id/etsdate"
                    android:layout_width="185dp"
                    android:layout_height="wrap_content"
                    android:hint="Date"
                    android:inputType="text"
                    android:textSize="17dp"
                    android:textStyle="bold"
                    android:focusable="false"/>
            </com.google.android.material.textfield.TextInputLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/w_eight"
            android:layout_width="405dp"
            android:layout_height="75dp"

            android:layout_weight="2"
            >
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="185dp"
                android:layout_height="wrap_content"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="30dp"
                android:layout_marginTop="10dp"

                >
                <EditText
                    android:id="@+id/etssupplier"
                    android:layout_width="185dp"
                    android:layout_height="wrap_content"
                    android:hint="Supplier"
                    android:inputType="text"
                    android:textSize="17dp"
                    android:textStyle="bold"/>
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="185dp"
                android:layout_height="wrap_content"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_marginLeft="200dp"
                android:layout_marginRight="30dp"
                android:layout_marginTop="10dp"

                >
                <EditText
                    android:id="@+id/etsmaterial"
                    android:layout_width="185dp"
                    android:layout_height="wrap_content"
                    android:hint="Material"
                    android:inputType="text"
                    android:textSize="17dp"
                    android:textStyle="bold"
                   />
            </com.google.android.material.textfield.TextInputLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="405dp"
            android:layout_height="75dp"

            android:layout_weight="2"
            >
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="185dp"
                android:layout_height="wrap_content"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="30dp"
                android:layout_marginTop="10dp"

                >
                <EditText
                    android:id="@+id/etsqty"
                    android:layout_width="185dp"
                    android:layout_height="wrap_content"
                    android:hint="Qty"
                    android:inputType="numberDecimal"
                    android:textSize="17dp"
                    android:textStyle="bold"/>
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="185dp"
                android:layout_height="wrap_content"
                style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox.ExposedDropdownMenu"
                android:layout_marginLeft="200dp"
                android:layout_marginRight="30dp"
                android:layout_marginTop="10dp"

                >
                <AutoCompleteTextView
                    android:id="@+id/etsuom"
                    android:layout_width="185dp"
                    android:layout_height="wrap_content"
                    android:hint="UOM"
                    android:inputType="none"
                    android:textSize="17dp"
                    android:textStyle="bold"
                    />
            </com.google.android.material.textfield.TextInputLayout>

        </androidx.cardview.widget.CardView>


        <androidx.cardview.widget.CardView

            android:layout_width="405dp"
            android:layout_height="75dp"

            android:layout_weight="2"
            >
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="185dp"
                android:layout_height="wrap_content"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="30dp"
                android:layout_marginTop="10dp"

                >
                <EditText
                    android:id="@+id/etsnetwt"
                    android:layout_width="185dp"
                    android:layout_height="wrap_content"
                    android:hint="Net Weight"
                    android:inputType="numberDecimal"
                    android:textSize="17dp"
                    android:textStyle="bold"/>
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="185dp"
                android:layout_height="wrap_content"
                style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox.ExposedDropdownMenu"
                android:layout_marginLeft="200dp"
                android:layout_marginRight="30dp"
                android:layout_marginTop="10dp"

                >
                <AutoCompleteTextView
                    android:id="@+id/etsuom2"
                    android:layout_width="185dp"
                    android:layout_height="wrap_content"
                    android:hint="UOM"
                    android:inputType="none"
                    android:textSize="17dp"
                    android:textStyle="bold"
                    />
            </com.google.android.material.textfield.TextInputLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_weight="2">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:orientation="horizontal">

                <androidx.appcompat.widget.AppCompatButton
                    android:layout_width="100dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="23dp"
                    android:text="Cancel"
                    android:textSize="22dp"
                    android:textStyle="bold">

                </androidx.appcompat.widget.AppCompatButton>

                <androidx.appcompat.widget.AppCompatButton
                    android:layout_width="100dp"
                    android:layout_height="match_parent"
                    android:id="@+id/viewdb"
                    android:layout_marginLeft="35dp"
                    android:text="View"
                    android:textSize="22dp"
                    android:textStyle="bold">

                </androidx.appcompat.widget.AppCompatButton>


                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/wesubmit"
                    android:layout_width="100dp"
                    android:layout_height="match_parent"
                    android:layout_below="@id/OUM."
                    android:layout_marginLeft="15dp"
                    android:text="SUBMIT"

                    android:textSize="22dp"
                    android:textStyle="bold">

                </androidx.appcompat.widget.AppCompatButton>
            </LinearLayout>

        </androidx.cardview.widget.CardView>
    </LinearLayout>


</ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>