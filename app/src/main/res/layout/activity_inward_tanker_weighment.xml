<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Inward_Tanker_Weighment">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:orientation="vertical"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp">


        <androidx.cardview.widget.CardView
            android:layout_width="405dp"
            android:layout_height="55dp"
            android:layout_marginTop="5dp"
            android:layout_weight="2">
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="185dp"
                android:layout_height="wrap_content"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="30dp"
                android:layout_marginTop="5dp"
                android:id="@+id/regno"
                android:background="#F2F2F2"
                >
                <EditText
                    android:id="@+id/etserialnumber"
                    android:layout_width="185dp"
                    android:layout_height="wrap_content"
                    android:hint="Serial Number"
                    android:inputType="text"
                    android:textSize="17dp"
                    android:textStyle="bold"/>
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="185dp"
                android:layout_height="wrap_content"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_marginLeft="200dp"
                android:layout_marginRight="30dp"
                android:layout_marginTop="5dp"
                android:background="#F2F2F2"
                >
                <EditText
                    android:id="@+id/etvehicalno"
                    android:layout_width="185dp"
                    android:layout_height="wrap_content"
                    android:hint="Vehicle No"
                    android:inputType="text"
                    android:textSize="17dp"
                    android:textStyle="bold"/>
            </com.google.android.material.textfield.TextInputLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/wtwo"
            android:layout_width="405dp"
            android:layout_height="55dp"
            android:layout_marginTop="5dp"
            android:layout_weight="2"
            >
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="185dp"
                android:layout_height="wrap_content"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="30dp"
                android:layout_marginTop="5dp"
                android:background="#F2F2F2"
                >
                <EditText
                    android:id="@+id/etsuppliername"
                    android:layout_width="185dp"
                    android:layout_height="wrap_content"
                    android:hint="Supplier Name"
                    android:inputType="text"
                    android:textSize="17dp"
                    android:textStyle="bold"/>
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="185dp"
                android:layout_height="wrap_content"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_marginLeft="200dp"
                android:layout_marginRight="30dp"
                android:layout_marginTop="5dp"
                android:background="#F2F2F2"
                >
                <EditText
                    android:id="@+id/etmaterialname"
                    android:layout_width="185dp"
                    android:layout_height="wrap_content"
                    android:hint="Material Name"
                    android:inputType="text"
                    android:textSize="17dp"
                    android:textStyle="bold"/>
            </com.google.android.material.textfield.TextInputLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/wthree"
            android:layout_width="405dp"
            android:layout_height="55dp"
            android:layout_marginTop="5dp"
            android:layout_weight="2">

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="185dp"
                android:layout_height="wrap_content"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="30dp"
                android:layout_marginTop="5dp"
                android:background="#F2F2F2"
                >
                <EditText
                    android:id="@+id/etcustname"
                    android:layout_width="185dp"
                    android:layout_height="wrap_content"
                    android:hint="Customer Name"
                    android:inputType="text"
                    android:textSize="17dp"
                    android:textStyle="bold"/>
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="185dp"
                android:layout_height="wrap_content"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_marginLeft="200dp"
                android:layout_marginRight="30dp"
                android:layout_marginTop="5dp"
                android:background="#F2F2F2"
                >
                <EditText
                    android:id="@+id/etdriverno"
                    android:layout_width="185dp"
                    android:layout_height="wrap_content"
                    android:hint="Driver No"
                    android:inputType="number"
                    android:textSize="17dp"
                    android:textStyle="bold"/>
            </com.google.android.material.textfield.TextInputLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/wfour"
            android:layout_width="405dp"
            android:layout_height="55dp"
            android:layout_marginTop="5dp"
             android:layout_weight="2"
            >
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="185dp"
                android:layout_height="wrap_content"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="30dp"
                android:layout_marginTop="5dp"
                android:background="#F2F2F2"
                >
                <EditText
                    android:id="@+id/etoano"
                    android:layout_width="185dp"
                    android:layout_height="wrap_content"
                    android:hint="OA Number"
                    android:inputType="text"
                    android:textSize="17dp"
                    android:textStyle="bold"/>
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="185dp"
                android:layout_height="wrap_content"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_marginLeft="200dp"
                android:layout_marginRight="30dp"
                android:layout_marginTop="5dp"
                android:background="#F2F2F2"
                >
                <EditText
                    android:id="@+id/etdate"
                    android:layout_width="185dp"
                    android:layout_height="wrap_content"
                    android:hint="Date"
                    android:inputType="text"
                    android:textSize="17dp"
                    android:textStyle="bold"
                    android:focusable="false"/>
            </com.google.android.material.textfield.TextInputLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/wfive"
            android:layout_width="405dp"
            android:layout_height="55dp"
            android:layout_marginTop="5dp"
            android:layout_weight="2"
            >
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="185dp"
                android:layout_height="wrap_content"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="30dp"
                android:layout_marginTop="5dp"
                android:background="#F2F2F2"
                >
                <EditText
                    android:id="@+id/etgrossweight"
                    android:layout_width="185dp"
                    android:layout_height="wrap_content"
                    android:hint="Gross Weight"
                    android:inputType="number"
                    android:textSize="17dp"
                    android:textStyle="bold"/>
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="185dp"
                android:layout_height="wrap_content"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_marginLeft="200dp"
                android:layout_marginRight="30dp"
                android:layout_marginTop="5dp"
                android:background="#F2F2F2"
                >
                <EditText
                    android:id="@+id/ettareweight"
                    android:layout_width="185dp"
                    android:layout_height="wrap_content"
                    android:hint="Tare Weight"
                    android:inputType="number"
                    android:textSize="17dp"
                    android:textStyle="bold"/>
            </com.google.android.material.textfield.TextInputLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/wsix"
            android:layout_width="405dp"
            android:layout_height="55dp"
            android:layout_marginTop="5dp"
            android:layout_weight="2"
            >
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="185dp"
                android:layout_height="wrap_content"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="30dp"
                android:layout_marginTop="5dp"
                android:background="#F2F2F2"

                >
                <EditText
                    android:id="@+id/etnetweight"
                    android:layout_width="185dp"
                    android:layout_height="wrap_content"
                    android:hint="Net Weight"
                    android:inputType="number"
                    android:textSize="17dp"
                    android:textStyle="bold"/>
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="185dp"
                android:layout_height="wrap_content"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_marginLeft="200dp"
                android:layout_marginRight="30dp"
                android:layout_marginTop="5dp"
                android:background="#F2F2F2"
                >
                <EditText
                    android:id="@+id/etdensity"
                    android:layout_width="185dp"
                    android:layout_height="wrap_content"
                    android:hint="Density"
                    android:inputType="numberDecimal"
                    android:textSize="17dp"
                    android:textStyle="bold"/>
            </com.google.android.material.textfield.TextInputLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/wseven"
            android:layout_width="405dp"
            android:layout_height="55dp"
            android:layout_marginTop="5dp"
             android:layout_weight="2"
            >
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="185dp"
                android:layout_height="wrap_content"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="30dp"
                android:layout_marginTop="5dp"
                android:background="#F2F2F2"

                >
                <EditText
                    android:id="@+id/etbatchno"
                    android:layout_width="185dp"
                    android:layout_height="wrap_content"
                    android:hint="Batch Number"
                    android:inputType="text"
                    android:textSize="17dp"
                    android:textStyle="bold"/>
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="185dp"
                android:layout_height="wrap_content"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_marginLeft="200dp"
                android:layout_marginRight="30dp"
                android:layout_marginTop="5dp"
                android:background="#F2F2F2"
                >
                <EditText
                    android:id="@+id/etempty"
                    android:layout_width="185dp"
                    android:layout_height="wrap_content"
                    android:hint=""
                    android:inputType="text"
                    android:textSize="17dp"
                    android:textStyle="bold"/>
            </com.google.android.material.textfield.TextInputLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/w_eight"
            android:layout_width="405dp"
            android:layout_height="55dp"
            android:layout_marginTop="5dp"
           android:layout_weight="2"
            >
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="185dp"
                android:layout_height="wrap_content"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="30dp"
                android:layout_marginTop="5dp"
                android:background="#F2F2F2"
                >
                <EditText
                    android:id="@+id/etsignby"
                    android:layout_width="185dp"
                    android:layout_height="wrap_content"
                    android:hint="Sign By"
                    android:inputType="text"
                    android:textSize="17dp"
                    android:textStyle="bold"/>
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="185dp"
                android:layout_height="wrap_content"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_marginLeft="200dp"
                android:layout_marginRight="30dp"
                android:layout_marginTop="5dp"
                android:background="#F2F2F2"
                >
                <EditText
                    android:id="@+id/etweDatetime"
                    android:layout_width="185dp"
                    android:layout_height="wrap_content"
                    android:hint="Date/Time"
                    android:inputType="text"
                    android:textSize="17dp"
                    android:textStyle="bold"
                    android:focusable="false"/>
            </com.google.android.material.textfield.TextInputLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_weight="2">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:orientation="horizontal">

                <androidx.appcompat.widget.AppCompatButton
                    android:layout_width="150dp"
                    android:layout_height="match_parent"
                    android:layout_below="@id/OUM."
                    android:layout_marginLeft="35dp"
                    android:text="Cancel"
                    android:textSize="22dp"
                    android:textStyle="bold">

                </androidx.appcompat.widget.AppCompatButton>


                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/wesubmit"
                    android:layout_width="150dp"
                    android:layout_height="match_parent"
                    android:layout_below="@id/OUM."
                    android:layout_marginLeft="15dp"
                    android:text="SUBMIT"

                    android:textSize="22dp"
                    android:textStyle="bold">

                </androidx.appcompat.widget.AppCompatButton>
            </LinearLayout>

        </androidx.cardview.widget.CardView>
    </LinearLayout>


</RelativeLayout>